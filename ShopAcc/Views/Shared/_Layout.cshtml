    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "100%";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
        }
        // Product
        const tabs = document.querySelectorAll('.product_taital');
        const all_content = document.querySelectorAll('.row');

        tabs.forEach((tab, index) => {
            tab.addEventListener('click', (e) => {
                tabs.forEach(tab => { tab.classList.remove('active-product') });
                tab.classList.add('active-product');

                var line = document.querySelector('.line');
                line.style.width = e.target.offsetWidth + "px";
                line.style.left = e.target.offsetLeft + "px";

                all_content.forEach(content => { content.classList.remove('active-product') });
                all_content[index].classList.add('active-product');
            })
        })
    </script>

    <script>
        $(document).ready(function () {

            $(".product_taital").click(function () {
                $(".col-lg-3").hide();
                $($(this).data("value")).fadeIn();
